<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SourceSansCaptionTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
    </style>

    <style name="SourceSansSubtitleAppearance1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SourceSansHeadlineAppearance6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
    </style>

    <style name="BaseTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">64dp</item>
        <item name="boxBackgroundColor">?attr/colorOnSurface</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
        <item name="startIconTint">?attr/colorOnSurface</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearance">@style/CornerShape16</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.TextInputEditText.SurfaceCursor</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.TextInputEditText.SurfaceCursor">
        <item name="colorPrimary">?attr/colorOnSurface</item>
    </style>

    <style name="BaseMaterialCheckbox" parent="@style/Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/selector_checkbox_tint</item>
        <item name="android:textColor">@color/selector_checkbox_tint</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
    </style>

    <style name="BaseCircularIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="indicatorColor">?attr/colorSecondary</item>
        <item name="indicatorDirectionCircular">counterclockwise</item>
    </style>

    <style name="CornerShape16" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="NoCaseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
        <item name="shapeAppearance">@style/CornerShape16</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">63dp</item>
    </style>

    <style name="SplashNoBackground" parent="ThemeOverlay.MaterialComponents">
        <item name="android:background">@null</item>
    </style>

    <style name="CurvedBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@color/black</item>
        <item name="bottomSheetStyle">@style/CurvedBottomSheet</item>
    </style>

    <style name="CurvedBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ExtraLargeShapeAppearance</item>
        <item name="shapeAppearance">@style/ExtraLargeShapeAppearance</item>
    </style>

    <style name="ExtraLargeShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">42dp</item>
        <item name="cornerSizeTopRight">42dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BaseToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="FixtureTextView" parent="BaseTextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
    </style>

    <style name="FixtureTextView.MatchStatus">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:theme">@style/CurveRight16</item>
    </style>

    <style name="ProfileShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">40dp</item>
    </style>

    <style name="CurveRight16">
        <item name="android:background">@drawable/shape_curved_rect_separate</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="CurvedImageView100">
        <item name="cornerSize">100dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@drawable/shape_curved_rect</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>
</resources>