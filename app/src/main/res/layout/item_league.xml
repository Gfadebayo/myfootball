<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="108dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingHorizontal="13dp"
    android:paddingVertical="20dp"
    android:background="@drawable/shape_curved_rect"
    android:backgroundTint="@color/selector_gradient_black">

    <ImageView
        android:id="@+id/image_league_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_profile"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_league_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:gravity="center"
        app:fontFamily="@font/sourcesanspro_semibold"
        tools:text="@string/premier_league"/>
</LinearLayout>