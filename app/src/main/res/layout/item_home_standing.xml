<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:fontFamily="@font/sourcesanspro_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1"/>

    <ImageView
        android:theme="@style/CurvedImageView100"
        android:id="@+id/image_logo"
        android:layout_width="48dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="12:12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_position"
        tools:src="@drawable/ic_home"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        app:fontFamily="@font/sourcesanspro_semibold"
        app:layout_constraintStart_toEndOf="@id/image_logo"
        app:layout_constraintTop_toTopOf="@id/image_logo"
        tools:text="@string/premier_league" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_team_name"
        app:layout_constraintStart_toStartOf="@id/text_team_name"
        tools:text="W   W   W   W   W" />
</androidx.constraintlayout.widget.ConstraintLayout>